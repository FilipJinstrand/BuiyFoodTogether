<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodApp.Login">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Label" x:Key="lableStyle">
                <Setter Property="TextColor" Value="#9BD5E0"/>
                <Setter Property="FontSize" Value="21"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout BackgroundColor="#E6FFFF" HorizontalOptions="Center">
            <Label Text="Welcome! Pleas enter your title.."
                Margin="0, 170, 0, -130"
                Padding="40, 5, 0, 20"
                HeightRequest="200"
                BackgroundColor="#4A4A4A"
                Style="{StaticResource lableStyle}" />
            <Entry Placeholder="Your title.." 
                    WidthRequest="500"
                    BackgroundColor="#4A4A4A"
                    PlaceholderColor="#E6872E"
                    TextColor="#E6872E" 
                    Margin="45, 0, 120, 0"
                    />
        </StackLayout>            
    </ContentPage.Content>
</ContentPage>